{
    "name": "Spotify Hotkeys",
    "description": "Keyboard shortcuts to play, pause, next and previous tracks in Spotify Web Player.",
    "manifest_version": 2,
    "author": "TsunDoge",
    "version": "1.1.0",
    "homepage_url": "https://github.com/TsunDoge/spotify-hotkeys-firefox",
    "browser_action": {
        "default_icon": "icons/logo-32.png",
        "theme_icons": [{
            "light": "icons/logo-32-light.png",
            "dark": "icons/logo-32.png",
            "size": 32
        }],
        "default_title": "Spotify"
    },
    "icons": {
        "64": "icons/logo-64.png"
    },

    "options_ui": {
        "page": "views/options.html"
    },
    "commands": {
        "play-pause": {
            "suggested_key": {
                "default": "Alt+Shift+P"
            },
            "description": "Send a 'toggle-feature' event to the extension"
        },
        "next": {
            "suggested_key": {
                "default": "Alt+Shift+Right"
            },
            "description": "Next track"
        },
        "previous": {
            "suggested_key": {
                "default": "Alt+Shift+Left"
            },
            "description": "Previous track"
        },
        "shuffle": {
            "description": "Shuffle"
        },
        "repeat": {
            "description": "Repeat"
        }
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["scripts/mousetrap.min.js", "scripts/content-script.js"],
        "run_at": "document_end",
        "match_about_blank": true
    }],
    "permissions": ["https://open.spotify.com/*", "https://play.spotify.com/*", "tabs", "storage", "<all_urls>"]
}